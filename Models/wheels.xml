<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>wheels.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>axesG</object-name>
    <object-name>axesD</object-name>
    <object-name>support</object-name>
    <object-name>echappe</object-name>

    <!-- Objets transparents -->
  </animation>

  <animation>
    <type>material</type>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>axesG</object-name>
    <object-name>axesD</object-name>
    <object-name>support</object-name>
    <object-name>echappe</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
  </animation>

  <!-- Cranking effects -->
  <!-- Left -->
  <model>
    <path>Aircraft/LATE-29/Models/Effects/cranking/cranking.xml</path>
    <offsets>
      <x-m> -3.953 </x-m>
      <y-m> -0.289 </y-m>
      <z-m>  1.778 </z-m>
    </offsets>
  </model>

  <!-- Right -->
  <model>
    <path>Aircraft/LATE-29/Models/Effects/cranking/cranking.xml</path>
    <offsets>
      <x-m> -3.953 </x-m>
      <y-m>  0.289 </y-m>
      <z-m>  1.778 </z-m>
    </offsets>
  </model>

  <!-- Effets sur le sol -->
  <!-- Roue gauche -->
  <model>
    <path>Aircraft/LATE-29/Models/Effects/ground/ground0.xml</path>
    <offsets>
      <x-m> -3.049 </x-m>
      <y-m> -1.677 </y-m>
      <z-m> -1.923 </z-m>
    </offsets>
  </model>

  <!-- Roue de droite -->
  <model>
    <path>Aircraft/LATE-29/Models/Effects/ground/ground1.xml</path>   
    <offsets>
      <x-m> -3.049 </x-m>
      <y-m>  1.677 </y-m>
      <z-m> -1.923 </z-m>
    </offsets>
  </model>

  <!-- Roulette -->
  <model>
    <path>Aircraft/LATE-29/Models/Effects/ground/ground2.xml</path>
    <offsets>
      <x-m> -5.599 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.170 </z-m>
    </offsets>
  </model>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -3.049 </x-m>
      <y-m> -1.677 </y-m>
      <z-m> -1.380 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -3.049 </x-m>
      <y-m>  1.677 </y-m>
      <z-m> -1.380 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
